<%- model_class = Trip -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @trip.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_date) %>:</strong></dt>
  <dd><%= @trip.start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_date) %>:</strong></dt>
  <dd><%= @trip.end_date %></dd>
</dl>

<hr/>
<h2>Travelers</h2>
<ul class="list-group">
  <% @trip.travelers.each do |traveler| %>
    <li class="list-group-item">
      <%= traveler.name %>
    </li>
  <% end %>
</ul>

<hr/>
<h2>Resources</h2>
<ul class="list-group">
  <% @trip.resources.each do |resource| %>
    <li class="list-group-item">
      <%= resource.name %><span class="badge"><%= resource.price %></span>
    </li>
  <% end %>
</ul>

<hr/>
<ul class="list-group">
    <li class="list-group-item">
      Total recursos: <span class="badge"><%= @total %></span>
    </li>
    <li class="list-group-item">
      Valor por persona: <span class="badge"><%= @per_person %></span>
    </li>
</ul>


<%= link_to t('.back', :default => t("helpers.links.back")),
              trips_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_trip_path(@trip), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              trip_path(@trip),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
