<%= form_for resource do |f| %>
  <% if resource.errors.any? %>
    <ul>
      <% resource.errors.full_messages.each do |m| %>
      <li> <%= m %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :resource_type_id %>
  <%= f.collection_select :resource_type_id, ResourceType.all, :id, :name %>
  <br/>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br/>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br/>
  <%= f.submit "Send" %>
<% end %>